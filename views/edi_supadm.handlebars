{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

{{#if useradms}}
    {{#each useradms}}
<form method="post" action="/ways/edi_supadm/{{this.id}}">
    <div class="form-group">
        <label>Nome</label>
        <input type="text" class="form-control" placeholder="Nome" name="name" value="{{this.name}}">
    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" placeholder="Username" name="username" value="{{this.username}}">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" value="{{this.email}}">
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input type="text" class="form-control" placeholder="Senha" name="password">
    </div>
    <div class="form-group">
        <label>Confirmar Senha</label>
        <input type="text" class="form-control" placeholder="Senha" name="password2">
    </div>
    <div class="form-group">
        <label>Admin</label>
        <input type="radio" name="permission" value="true" checked>
        <br>
        <label>Suporte</label>
        <input type="radio" name="permission" value="">
    </div>
    <input type="hidden" name="active" value="on">

    <button type="submit" class="btn btn-default">Cadastrar</button>

</form>
    {{/each}}
{{/if}}